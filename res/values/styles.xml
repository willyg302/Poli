<resources>

    <style name="Theme.Demo" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
    </style>

 
    <style name="ImageGridButton">
        <item name="android:textSize">11dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="TopicTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_very_large</item>
        <item name="android:padding">@dimen/title_text_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/topic_title_text</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="TopicText">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/text_body_padding</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    
    <style name="GridPageTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/topic_title_height</item>
        <item name="android:padding">@dimen/topic_title_padding</item>
    </style>
</resources>