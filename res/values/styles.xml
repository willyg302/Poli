<resources>

    <!--parent used to be android:Theme.Holo.Light-->
    <style name="Theme.Demo" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
    </style>

 
    <style name="ImageGridButton">
        <item name="android:textSize">11dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="TopicTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_very_large</item>
        <item name="android:padding">@dimen/title_text_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/topic_title_text</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="TopicText">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/text_body_padding</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    
    <style name="GridPageTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/topic_title_height</item>
        <item name="android:padding">@dimen/topic_title_padding</item>
    </style>
    
    
    
    <!-- @WillyG: Added below -->
    
    <style name="TileImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/tile_default_bg</item>
    </style>
    
    <style name="BaseText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="TileTitle" parent="BaseText">
        <item name="android:textSize">12dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.25</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="PostText" parent="BaseText">
        <item name="android:textSize">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        
        <!-- @TODO: text is cut off on right margin due to padding/margin issues... -->
        <item name="android:padding">0dip</item>
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginRight">2dip</item>
    </style>
    
    <style name="DescText" parent="BaseText">
        <item name="android:background">#aa000000</item>
        <item name="android:textSize">8dp</item>
    </style>
    
</resources>